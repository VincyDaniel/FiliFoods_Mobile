<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="121dp"
        android:layout_height="39dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Welcome!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#76472D"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:text="Send"
        android:textAlignment="center"
        android:textColor="#76472D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:text="All"
        android:textColor="#76472D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/btn_all" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="128dp"
        android:layout_height="108dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:background="#FCFDEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/search" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:text="Search"
        android:textColor="#76472D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:text="Random"
        android:textColor="#76472D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_random" />

    <ImageButton
        android:id="@+id/btn_random"
        android:layout_width="128dp"
        android:layout_height="108dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="68dp"
        android:background="#FCFDEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/random" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="195dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/filifoods_logo" />

    <ImageButton
        android:id="@+id/btn_all"
        android:layout_width="128dp"
        android:layout_height="108dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="64dp"
        android:background="#FCFDEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/all" />

    <ImageButton
        android:id="@+id/btn_filter"
        android:layout_width="128dp"
        android:layout_height="108dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="64dp"
        android:background="#FCFDEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/send" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#76472D"
        android:fontFamily="@font/amaranth_bold"
        android:text="Logout"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_name" />


</androidx.constraintlayout.widget.ConstraintLayout>